<% provide(:title, "Recherche conjugaison de verbes francais") %>
<% provide(:description, "Trouver un verbe francais") %>

<div class="row">
	<div class="col-lg-6 col-md-6 col-xs-10 col-md-offset-3 col-lg-offset-3 col-xs-offset-1">

		<h1 class="page-header text-center first-title">Conjugaison des verbes francais</h1>

		<%= render partial: "search_form", locals: {verb: @name} %>

		<hr />

	</div>
</div>

<hr />

<div class="row">
	<div class="col-lg-6 col-md-6 col-xs-10 col-md-offset-3 col-lg-offset-3 col-xs-offset-1">

		<br />

		<div class="col-md-12 nadvence-box">
			<h1 class="text-center page-header box-title text-warning"> Aucun résultat pour: <%= @name.to_s%></h1>
			<div>
				<h3>Verbes proches</h3>
				
				<% @verbs.each do |verb| %>
				<%= link_to verb.content.to_s, verb%>
				<% end %>
				
				<% if @verbs.empty?%>
				Aucun verbe proche trouvé
				<% end %>
			</div>
			<br />
			<div>
				<%= link_to "Liste des verbes Francais", verbs_path, :class => "box-title"%>
			</div>
		</div>
	</div>
</div>