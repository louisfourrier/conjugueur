<% provide(:title, t('.title') ) %>
<% provide(:description, t('.description') ) %>

<div class="row">
	<div class="col-lg-6 col-md-6 col-xs-10 col-md-offset-3 col-lg-offset-3 col-xs-offset-1">

		<h1 class="page-header text-center first-title box-big-title"><%= t('.h1') %></h1>
		<br />
		<%= render partial: "conjugaisons/verbes/search_form", locals: {verb: @name} %>

		<hr />

	</div>
</div>

<hr />

<div class="row">
	<div class="col-lg-6 col-md-6 col-xs-10 col-md-offset-3 col-lg-offset-3 col-xs-offset-1">

		<br />

		<div class="col-md-12 nadvence-box">
			<h1 class="text-center page-header box-title text-warning"> <%= t('.no_result') %> : <b><%= @name.to_s%></b></h1>
			<div>
				<h3><%= t('.close_verbs') %></h3>
				
				<% @verbs.each do |verb| %>
				<%= link_to verb.content.to_s, conjugaisons_verbe_path(verb)%>
				<% end %>
				
				<% if @verbs.empty?%>
				<%= t('.no_verb') %>
				<% end %>
			</div>
			<br />
			<div class="box-title">
				<%= link_to t('.verbs_list'), conjugaisons_verbes_path, :class => ""%>
			</div>
		</div>
	</div>
</div>