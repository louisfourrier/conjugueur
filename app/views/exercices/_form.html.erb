	<h2 class="page-header"><%= mode.name %></h2>
	<% mode.tenses.each do |tense|%>
	
	<div class="checkbox">
		<label> <%= check_box_tag "exercice[tenses_associated][#{tense.id}]", 1, false, :class => "" %>
			<%= tense.name %> </label>
	</div>

	

	<% end %>
</div>
<% end -%>

</div>

